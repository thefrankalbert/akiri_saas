# ===========================================
# Akiri - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# --- App ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# --- Stripe ---
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# --- KYC / Verification ---
# Mode: "mock" for development (auto-approves), "stripe" for production
KYC_MODE=mock

# Stripe Identity webhook secret (for production)
STRIPE_IDENTITY_WEBHOOK_SECRET=your_stripe_identity_webhook_secret

# Twilio (optional, for SMS OTP in production)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# --- Upstash Redis (rate limiting) ---
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- Email (Resend) ---
RESEND_API_KEY=
RESEND_FROM_EMAIL=Akiri <noreply@akiri.app>

# --- Sentry (optional) ---
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# --- PostHog Analytics (optional) ---
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# --- Web Push (VAPID) ---
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:contact@akiri.app
